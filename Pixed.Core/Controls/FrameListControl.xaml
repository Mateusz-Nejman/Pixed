<UserControl x:Class="Pixed.Controls.FrameListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pixed.Controls"
             mc:Ignorable="d" 
             Width="96" Height="96">
    <Border BorderBrush="#444" BorderThickness="1">
        <Grid Width="96" Height="96">
            <Grid.Background>
                <ImageBrush ImageSource="../Resources/transparentBackground.png" TileMode="Tile" Stretch="Uniform" AlignmentY="Top" Viewport="0,0,32,32" ViewportUnits="Absolute"/>
            </Grid.Background>
            <Image Width="96" Height="96" Source="{Binding RenderSource}"/>
        </Grid>
    </Border>
</UserControl>
