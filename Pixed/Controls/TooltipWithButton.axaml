<UserControl x:Class="Pixed.Controls.TooltipWithButton"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pixed.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Background="Black">
        <TextBlock FontWeight="Bold" FontSize="14" Margin="0,0,0,5" Text="{Binding Title, RelativeSource={RelativeSource FindAncestor, AncestorType=local:TooltipWithButton}}" Foreground="White"></TextBlock>
        <WrapPanel>
            <Border Padding="2" BorderBrush="{StaticResource ButtonBorder}" BorderThickness="1" Margin="0,0,5,0">
                <TextBlock Text="{Binding ButtonText, RelativeSource={RelativeSource FindAncestor, AncestorType=local:TooltipWithButton}}" FontSize="10" Foreground="White"/>
            </Border>
            <TextBlock FontSize="12" Foreground="White" Text="{Binding ButtonTextHelper, RelativeSource={RelativeSource FindAncestor, AncestorType=local:TooltipWithButton}}"/>
        </WrapPanel>
    </StackPanel>
</UserControl>
