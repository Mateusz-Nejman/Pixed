<Application x:Class="Pixed.App"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:templates="clr-namespace:ColorPicker.AvaloniaUI.Templates;assembly=ColorPicker.AvaloniaUI"
             xmlns:local="clr-namespace:Pixed"
             RequestedThemeVariant="Dark">
    <Application.Resources>
      <ResourceDictionary>
        <ResourceDictionary.MergedDictionaries>
          <ResourceInclude Source="/Colors.axaml"/>
          <ResourceInclude Source="/ControlThemes.axaml"/>
        </ResourceDictionary.MergedDictionaries>
        <ResourceDictionary.ThemeDictionaries>
          <ResourceInclude x:Key="Default" Source="/ColorPickerTheme.axaml"/>
        </ResourceDictionary.ThemeDictionaries>
      </ResourceDictionary>
    </Application.Resources>
  <Application.Styles>
	  <SimpleTheme/>
	  <templates:PixiPerfectColorPickerTheme />
    <FluentTheme />
	  <StyleInclude Source="avares://AvaloniaProgressRing/Styles/ProgressRing.xaml"/>
	  <StyleInclude Source="/Styles.axaml"/>
  </Application.Styles>
</Application>
