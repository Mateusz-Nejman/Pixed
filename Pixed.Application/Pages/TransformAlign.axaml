<local:Modal xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pixed.Application.Pages;assembly=Pixed.Application"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Pixed.Application.Pages.TransformAlign"
        Title="Align center">
  <local:Modal.Dialog>
    <StackPanel>
      <CheckBox Content="Apply to all frames" Name="applyToAllFrames" Margin="10"/>
      <CheckBox Content="Apply to all layers" Name="applyToAllLayers" Margin="10"/>
      <Button Content="OK" Click="Button_Click"
        Height="24" MinWidth="80" Padding="10,0" Margin="10"/>
    </StackPanel>
  </local:Modal.Dialog>
</local:Modal>
