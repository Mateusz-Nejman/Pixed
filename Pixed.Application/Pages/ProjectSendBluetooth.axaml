<local:Modal xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d"
			 xmlns:local="clr-namespace:Pixed.Application.Pages"
			 xmlns:viewModels="clr-namespace:Pixed.Application.ViewModels"
			 x:Class="Pixed.Application.Pages.ProjectSendBluetooth"
			 x:DataType="viewModels:ProjectSendBluetoothViewModel"
			 Title="Send current project">
	<local:Modal.DataContext>
		<viewModels:ProjectSendBluetoothViewModel/>
	</local:Modal.DataContext>
	<local:Modal.Dialog>
		<StackPanel Margin="5">
			<ComboBox ItemsSource="{Binding AvailableDevices}" SelectedItem="{Binding SelectedDevice, Mode=TwoWay}" Margin="0,0,0,5">
				<ComboBox.ItemTemplate>
					<DataTemplate>
						<TextBlock Text="{Binding DeviceName}"/>
					</DataTemplate>
				</ComboBox.ItemTemplate>
			</ComboBox>
			<TextBlock Text="{Binding Status}" IsVisible="{Binding StatusVisible}"/>
			<Button Content="Send" Command="{Binding SendCommand}" IsEnabled="{Binding IsButtonEnabled}" Margin="0,5,0,0"/>
		</StackPanel>
	</local:Modal.Dialog>
</local:Modal>
