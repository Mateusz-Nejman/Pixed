<local:Modal x:Class="Pixed.Application.Pages.Message"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pixed.Application.Pages"
        mc:Ignorable="d"
        Title="Message">
	<local:Modal.Dialog>
		<StackPanel>
			<TextBlock Text="{Binding Text, RelativeSource={RelativeSource FindAncestor, AncestorType=local:Message}}" Margin="10"/>
			<Button Content="OK" Click="Button_Click"
				Height="24" MinWidth="80" Padding="10,0" Margin="10"/>
		</StackPanel>
	</local:Modal.Dialog>
</local:Modal>
